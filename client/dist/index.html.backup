    <script>
        const services = [
            {
                name: 'Companionship & Care',
                description: 'Caring support to combat loneliness and isolation',
                icon: 'üë•',
                details: 'Regular visits, outings, and meaningful conversations with trained caregivers. We provide companionship that helps seniors feel valued and connected.',
                fullDescription: 'Our companionship services are designed to combat isolation and loneliness, which are common challenges for seniors. Our caring caregivers provide regular visits, engaging conversations, and companionship activities. Whether it\'s playing games, sharing meals, or simply listening, we\'re here to bring joy and connection to your loved one\'s life.'
            },
            {
                name: 'Personal Care Assistance',
                description: 'Help with daily living activities',
                icon: 'üè†',
                details: 'Bathing, dressing, grooming, and medication reminders provided with dignity and care.',
                fullDescription: 'We understand that personal care is a sensitive matter. Our trained caregivers provide respectful assistance with bathing, dressing, grooming, toileting, and medication reminders. We focus on maintaining your loved one\'s dignity and independence while ensuring their safety and health.'
            },
            {
                name: 'Meal Preparation',
                description: 'Nutritious meals tailored to dietary needs',
                icon: 'üç≤',
                details: 'Meal planning, preparation, and nutritional support for health and wellness.',
                fullDescription: 'Proper nutrition is essential for senior health. Our caregivers will prepare nutritious, delicious meals tailored to your loved one\'s dietary needs and preferences. From meal planning to shopping and cooking, we ensure every meal is both healthy and enjoyable.'
            },
            {
                name: 'Household Management',
                description: 'Light housekeeping and maintenance support',
                icon: 'üßπ',
                details: 'Cleaning, laundry, and organization services to maintain a safe, comfortable home.',
                fullDescription: 'A clean, organized home is important for safety and well-being. Our services include light housekeeping, laundry, organizing, and light tidying. We help maintain a safe, comfortable living environment without being overwhelming or intrusive.'
            },
            {
                name: 'Transportation & Errands',
                description: 'Safe transportation to appointments and activities',
                icon: 'üöó',
                details: 'Doctor visits, shopping, social outings, and errands with reliable, caring support.',
                fullDescription: 'Getting around can be challenging for seniors. We provide safe, reliable transportation to medical appointments, shopping trips, social outings, and other errands. Our caregivers ensure your loved one gets where they need to go with comfort and peace of mind.'
            },
            {
                name: 'Pet Care Support',
                description: 'Help caring for beloved pets',
                icon: 'üêï',
                details: 'Walking, feeding, and companionship for pets to keep them healthy and happy.',
                fullDescription: 'Pets are an important part of many seniors\' lives. We provide pet care support including walking, feeding, grooming assistance, and playtime. This helps ensure both your loved one and their furry friends stay healthy and happy together.'
            }
        ];

        let expandedService = null;
        let currentService = null;

        function renderHomeServices() {
            const grid = document.getElementById('homeServicesGrid');
            grid.innerHTML = services.map((service, idx) => `
                <div class="service-card" onclick="showServiceDetail(${idx})">
                    <div class="service-icon">${service.icon}</div>
                    <div class="service-name">${service.name}</div>
                    <div class="service-description">${service.description}</div>
                    <div style="color: var(--primary-gold); font-weight: 600; cursor: pointer;">Learn More ‚Üí</div>
                </div>
            `).join('');
        }

        function renderAllServices() {
            const grid = document.getElementById('allServicesGrid');
            grid.innerHTML = services.map((service, idx) => `
                <div class="service-card" onclick="toggleService(${idx})">
                    <div class="service-icon">${service.icon}</div>
                    <div class="service-name">${service.name}</div>
                    <div class="service-description">${service.description}</div>
                    ${expandedService === idx ? `
                        <div class="service-details">${service.details}</div>
                    ` : ''}
                    <div class="chevron ${expandedService === idx ? 'expanded' : ''}">‚ñº</div>
                </div>
            `).join('');

            // Populate service select dropdown
            const serviceSelect = document.getElementById('service');
            if (serviceSelect) {
                serviceSelect.innerHTML = '<option value="">Select Service of Interest</option>' + 
                    services.map(s => `<option value="${s.name}">${s.name}</option>`).join('');
            }
        }

        function toggleService(idx) {
            expandedService = expandedService === idx ? null : idx;
            renderAllServices();
        }

        function showServiceDetail(idx) {
            currentService = idx;
            const service = services[idx];
            const content = document.getElementById('serviceDetailContent');
            content.innerHTML = `
                <div class="service-detail-header">
                    <div class="icon">${service.icon}</div>
                    <h1>${service.name}</h1>
                    <p>${service.description}</p>
                </div>
                <div style="background: white; padding: 2rem; border-radius: 1rem; line-height: 1.8; color: #555;">
                    <p>${service.fullDescription}</p>
                </div>
            `;
            showPage('serviceDetail');
            window.scrollTo(0, 0);
        }

        function showPage(pageName) {
            document.querySelectorAll('.page').forEach(page => page.classList.remove('active'));
            document.getElementById(pageName).classList.add('active');
            window.scrollTo(0, 0);
            
            if (pageName === 'services') {
                expandedService = null;
                renderAllServices();
            } else if (pageName === 'home') {
                renderHomeServices();
            }
        }

        async function submitForm() {
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const service = document.getElementById('service').value;
            const message = document.getElementById('message').value;

            const messagesDiv = document.getElementById('contactMessages');
            messagesDiv.innerHTML = '';

            if (!name || !email) {
                messagesDiv.innerHTML = '<div class="error-message">Please fill in all required fields</div>';
                return;
            }

            try {
                const response = await fetch('/api/inquiries', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        name,
                        email,
                        phone,
                        serviceInterest: service,
                        message
                    })
                });

                if (response.ok) {
                    messagesDiv.innerHTML = '<div class="success-message">Thank you for your inquiry! We will contact you soon at ' + email + ' or ' + (phone || 'the phone number on file') + '.</div>';
                    
                    document.getElementById('name').value = '';
                    document.getElementById('email').value = '';
                    document.getElementById('phone').value = '';
                    document.getElementById('service').value = '';
                    document.getElementById('message').value = '';
                } else {
                    messagesDiv.innerHTML = '<div class="error-message">Error sending inquiry. Please try again.</div>';
                }
            } catch (error) {
                console.error('Error:', error);
                messagesDiv.innerHTML = '<div class="error-message">Error sending inquiry. Please try again.</div>';
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            renderHomeServices();
        });
    </script>
</body>
</html>
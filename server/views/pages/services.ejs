<%- include('../partials/header', { title: 'Services', page: 'services' }) %>

<section class="services-section">
    <div class="services-container">
        <h1 class="section-title">Our Services</h1>
        <p style="text-align: center; max-width: 800px; margin: 0 auto 3rem; font-size: 1.2rem; color: #666;">
            Comprehensive senior care services tailored to your loved one's needs in Orange County, California
        </p>
        
        <div class="services-grid">
            <% services.forEach(service => { %>
                <a href="/services/<%= service.slug %>" class="service-card" style="text-decoration: none; color: inherit;">
                    <div class="service-icon"><%= service.icon %></div>
                    <div class="service-name"><%= service.name %></div>
                    <div class="service-description"><%= service.description %></div>
                    <div style="color: var(--primary-gold); font-weight: 600; margin-top: 1rem;">Learn More â†’</div>
                </a>
            <% }) %>
        </div>

        <div style="text-align: center; margin-top: 4rem;">
            <a href="/contact" class="cta-button">Get Started - Contact Us Today</a>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>

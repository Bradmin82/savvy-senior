<%- include('../partials/header', { title: 'Home', page: 'home' }) %>

<section class="hero">
    <div class="hero-container">
        <h1>Compassionate Care for Your Loved Ones</h1>
        <p class="tagline">Experience. Guidance. Solutions.</p>
        <p>Professional senior care services in Orange County, California</p>
        <a href="/services" class="cta-button">Explore Our Services</a>
    </div>
</section>

<section class="services-section">
    <div class="services-container">
        <h2 class="section-title">Our Services</h2>
        <div class="services-grid">
            <% services.forEach(service => { %>
                <a href="/services/<%= service.slug %>" class="service-card" style="text-decoration: none; color: inherit;">
                    <div class="service-icon"><%= service.icon %></div>
                    <div class="service-name"><%= service.name %></div>
                    <div class="service-description"><%= service.description %></div>
                </a>
            <% }) %>
        </div>
    </div>
</section>

<%- include('../partials/footer') %>
